<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Travel" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

 <style name="button" parent="Theme.MaterialComponents.DayNight.NoActionBar">

     <item name="android:textSize">@dimen/_12sdp</item>
     <item name="android:fontFamily">sans-serif-medium</item>
     <item name="cornerRadius">@dimen/_50sdp</item>
     <item name="android:textColor">@color/white</item>
     <item name="backgroundTint">@color/brown</item>
     <item name="android:paddingVertical" tools:targetApi="o">@dimen/_5sdp</item>
 </style>

    <style name="CustomCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">

        <item name="android:button">@drawable/checkbox_selectors</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

 <style name="EdittextLayout" parent="Theme.MaterialComponents.DayNight.NoActionBar">
     <item name="android:textColorHint">@color/dark_brown</item>
     <item name="boxBackgroundMode">outline</item>
     <item name="boxStrokeColor">@color/dark_brown</item>
     <item name="hintTextColor">@color/dark_brown</item>
     <item name="android:textColor">@color/dark_brown</item>
 </style>

    <style name="TextViewTitle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/dark_brown</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
    </style>

    <style name="TextViewDec" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
    </style>


</resources>